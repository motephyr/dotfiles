{
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "list.maxPreviewHeight": 60,
  "suggest.minTriggerInputLength": 2,
  "suggest.acceptSuggestionOnCommitCharacter": false,

  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,

  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx",
    "vue"
  ],
  "diagnostic.infoSign": "ღ",
  "diagnostic.warningSign": "⚠",
  "diagnostic.errorSign": "✖",

  "solargraph.autoformat": false,
  "solargraph.formatting": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true, 
  "explorer.file.showHiddenFiles": true,
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],
  "explorer.keyMappings": {
    "<2-LeftMouse>": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "<space>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "i": "open:split",
    "s": "open:vsplit"
  },
  "explorer.openAction.strategy": "previousBuffer",
  "explorer.previewAction.onHover": false,
  "explorer.file.root.template": "  [root]",
  "explorer.file.child.template": "[selection | clip][indent][icon & 1][git][diagnosticError & 1][filename omitCenter 1][readonly]",
  "explorer.width": 33,
  "explorer.file.column.git.icon.modified": "[~]",
  "explorer.file.column.git.icon.unmodified": "",
  "explorer.file.column.git.icon.added": "[+]",
  "explorer.file.column.git.icon.deleted": "[_]",
  "explorer.file.column.git.icon.renamed": "[➜]",
  "explorer.file.column.git.icon.unmerged": "[=]",
  "explorer.file.column.git.icon.untracked": "[✭]",
  "explorer.file.column.git.icon.mixed": "[~]",
  "explorer.icon.expanded": "▾",
  "explorer.icon.collapsed": "▸"
}
